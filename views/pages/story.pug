meta(content='NRJohnson | ' + story.title property='og:title' class='var-head')
meta(content="About " + story.title + " by NRJohnson." property='og:description' class='var-head')

meta(content=story.image property='og:image' class='var-head')

meta(content="website" property='og:type' class='var-head')
meta(content='/story/' + story._id property='og:url' class='var-head')
meta(name="twitter:card" content="summary" class='var-head')

title= 'NRJohnson | ' + story.title

<hr class='sep'>

section(class='banner-main')
    div(class='col banner-image-cont')
        figure(class='banner-image')
            img(src=story.image)
    div(class='row banner-btn-main')
        div(class='col-6 col-md-3 col-lg-2 p-0 ms-auto')
            a(href=story.url class='btn w-100' target='_blank') View on Vocal
