<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico")
        link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
        link(rel="stylesheet", href="/stylesheets/style.css")
        script(src='https://www.google.com/recaptcha/api.js?render=6Lc-pd0gAAAAAOyqsmvkY10zycG3SCQKdelhMEsX' async)
        block head
            title= route ? 'NRJohnson | ' + route.substring(0,1).toUpperCase() + route.substring(1) : 'NRJohnson | Home'
    body
        -let clas = ''
        if message
            if message.err
                -clas = 'err'
        div#myAlert(class=clas)
            div#myAlertBack
            div(class='row my-alert-box')
                div(class='col-12')
                    p#myAlertText
                        if message
                            | !{message.msg}
                div(class='col-12 mt-2')
                    a#myAlertOK(href='#' class='btn w-100') OK
        div#mainBody(data-loc='/' + route)
            include templates/mobile-menu.pug
            main(class='container p-0')
                include templates/header.pug
                div#body
                    div#content
                        if data
                            | !{data}
                        if error
                            p= error
            
                include templates/footer.pug      
        
        script(src='/script.js')